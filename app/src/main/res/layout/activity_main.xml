<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="false"
    android:windowTranslucentNavigation="false"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:srcCompat="@drawable/screen" />

    <TextView
        android:id="@+id/textViewBackground8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:alpha="0.08"
        android:fontFamily="@font/digital"
        android:letterSpacing="0.04"
        android:text="8888888888"
        android:textColor="@color/dark"
        android:textSize="64sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textViewDigits"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/digital"
        android:letterSpacing="0.04"
        android:text="777"
        android:textColor="@color/dark"
        android:textSize="64sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewBackground8"
        app:layout_constraintEnd_toEndOf="@+id/textViewBackground8"
        app:layout_constraintStart_toStartOf="@+id/textViewBackground8"
        app:layout_constraintTop_toTopOf="@+id/textViewBackground8" />

    <TextView
        android:id="@+id/textCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/museo"
        android:text="Calculator"
        android:textColor="@color/dark"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:foregroundGravity="fill"
        android:transitionGroup="false"
        app:layout_constrainedHeight="false"
        app:layout_constrainedWidth="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <Button
            android:id="@+id/button_0"
            style="@style/white_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            app:layout_constraintEnd_toEndOf="@+id/button_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_1" />

        <Button
            android:id="@+id/button_comma"
            style="@style/white_button"
            android:layout_weight="1"
            android:text=","
            app:layout_constraintEnd_toStartOf="@+id/button_divide"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/button_3" />

        <Button
            android:id="@+id/button_equal"
            style="@style/blue_button"
            android:layout_weight="1"
            android:text="="
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_plus" />

        <Button
            android:id="@+id/button_1"
            style="@style/white_button"
            android:layout_weight="1"
            android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_4" />

        <Button
            android:id="@+id/button_2"
            style="@style/white_button"
            android:layout_weight="1"
            android:text="2"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/button_4"
            app:layout_constraintTop_toBottomOf="@+id/button_5" />

        <Button
            android:id="@+id/button_3"
            style="@style/white_button"
            android:layout_weight="1"
            android:text="3"
            app:layout_constraintEnd_toStartOf="@+id/button_divide"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/button_6" />

        <Button
            android:id="@+id/button_plus"
            style="@style/blue_button"
            android:layout_weight="1"
            android:text="+"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_minus" />

        <Button
            android:id="@+id/button_4"
            style="@style/white_button"
            android:layout_weight="1"
            android:text="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_7" />

        <Button
            android:id="@+id/button_5"
            style="@style/white_button"
            android:layout_weight="1"
            android:text="5"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/button_4"
            app:layout_constraintTop_toBottomOf="@+id/button_8" />

        <Button
            android:id="@+id/button_6"
            style="@style/white_button"
            android:layout_weight="1"
            android:text="6"
            app:layout_constraintEnd_toStartOf="@+id/button_divide"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/button_9" />

        <Button
            android:id="@+id/button_minus"
            style="@style/blue_button"
            android:layout_weight="1"
            android:text="-"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_multiply" />

        <Button
            android:id="@+id/button_7"
            style="@style/white_button"
            android:layout_weight="1"
            android:text="7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_AC" />

        <Button
            android:id="@+id/button_8"
            style="@style/white_button"
            android:layout_weight="1"
            android:text="8"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/button_7"
            app:layout_constraintTop_toBottomOf="@+id/button_plusminus" />

        <Button
            android:id="@+id/button_9"
            style="@style/white_button"
            android:layout_weight="1"
            android:text="9"
            app:layout_constraintEnd_toStartOf="@+id/button_divide"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/button_percent" />

        <Button
            android:id="@+id/button_multiply"
            style="@style/blue_button"
            android:layout_weight="1"
            android:text="X"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_divide" />

        <Button
            android:id="@+id/button_AC"
            style="@style/white_button"
            android:layout_weight="1"
            android:text="AC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_plusminus"
            style="@style/white_button"
            android:layout_weight="1"
            android:text="+/-"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/button_AC"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_percent"
            style="@style/white_button"
            android:layout_weight="1"
            android:text="%"
            app:layout_constraintEnd_toStartOf="@+id/button_divide"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_divide"
            style="@style/blue_button"
            android:layout_weight="1"
            android:text="รท"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />
</androidx.constraintlayout.widget.ConstraintLayout>